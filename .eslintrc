extends:
  eslint-config-airbnb

parser:
  babel-eslint

settings:
  ecmascript: 6

ecmaFeatures:
  jsx: true
  modules: true
  destructuring: true
  classes: true
  forOf: true
  blockBindings: true
  arrowFunctions: true

env:
  browser: true

rules:
  comma-dangle: 0
  quotes: [ 1, "single" ]
  no-undef: 1
  global-strict: 0
  no-extra-semi: 1
  no-underscore-dangle: 0
  no-console: 1
  no-unused-vars: 1
  no-trailing-spaces: [1, { "skipBlankLines": true }]
  no-unreachable: 1
  no-alert: 0
  react/jsx-uses-react: 1
  react/jsx-uses-vars: 1
  react/prefer-stateless-function: 0
  react/jsx-filename-extension: 0
  react/forbid-prop-types: 0
  max-len: ['error', 120, 2, {
    ignoreUrls: true,
    ignoreComments: false,
    ignoreRegExpLiterals: true,
    ignoreStrings: true,
    ignoreTemplateLiterals: true,
  }]
